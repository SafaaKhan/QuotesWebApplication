@model IEnumerable<QuoteWebApp_Models.Models.Quote>

@{
    ViewData["Title"] = "ListQuotes";
}

<h1>List Quotes</h1>

<form asp-controller="Quotes" asp-action="ListQuotes">
    <p>
        Author Name: <div class="form-group">
            <select name="SearchString" class="form-control" asp-items="ViewBag.AuthorId"></select>
        </div>
        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    <a asp-action="AddQuote">Create New</a>
    <a asp-action="GetRandomQuote">Get Random Quote </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-action="UpdateQuote" asp-route-id="@item.Id">Update Quote</a> |
                    <a asp-action="DeleteQuote" asp-route-id="@item.Id">Delete Quote</a>
                </td>
            </tr>
        }
    </tbody>
</table>

