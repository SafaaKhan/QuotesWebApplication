@model IEnumerable<QuoteWebApp_Models.Models.Author>

@{
    ViewData["Title"] = "ListAuthors";
}

<h1>List Authors</h1>

<p>
    <a asp-action="AddAuthor">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-controller="Quote" asp-action="ListQuotes" asp-route-authorId="@item.Id">Quotes</a> |
                    <a asp-action="UpdateAuthor" asp-route-id="@item.Id">Update Author</a> |
                    <a asp-action="DeleteAuthor" asp-route-id="@item.Id">Delete Author</a>
                </td>
            </tr>
        }
    </tbody>
</table>
